generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Locations {
    ID            Int              @id @default(autoincrement())
    Name          String           @unique
    LocationItems ItemsInventory[]
}

model ItemsInventory {
    ID         Int       @id @default(autoincrement())
    EAN        String
    Stock      Int
    Expiry     DateTime
    Location   Locations @relation(fields: [LocationID], references: [ID])
    LocationID Int
}

