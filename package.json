{
  "name": "energy-ts",
  "private": true,
  "version": "0.0.0",
  "exports": "./dist/index.js",
  "prisma": {
    "schema": "./server/prisma/schema.prisma"
  },
  "scripts": {
    "dev": "npm run dev:frontend && npm run dev:server",
    "pm": "dotenv -e .env -- npx prisma migrate dev",
    "dev:frontend": "vite ./frontend",
    "dev:server": "nodemon ./server/index.ts",
    "build": "npm i && npm run build:frontend && npm run build:server && docker build . -t energyapp",
    "build:frontend": "vue-tsc -p ./frontend/tsconfig.json --noEmit && vite build ./frontend --emptyOutDir",
    "build:server": "npx tsc -p ./server/tsconfig.json",
    "preview": "vite preview"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "@zxing/browser": "^0.1.1",
    "@zxing/library": "^0.19.1",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "moment": "^2.29.4",
    "pinia": "^2.0.0-rc.10",
    "vue": "^3.2.37",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.23",
    "@vitejs/plugin-vue": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "dotenv-cli": "^7.0.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.21",
    "sass": "^1.55.0",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vue-tsc": "^0.40.4"
  }
}
